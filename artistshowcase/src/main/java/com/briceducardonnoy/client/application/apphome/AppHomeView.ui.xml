<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cover="urn:import:org.gwt.contentflow4gwt.client">
             
    <ui:style>
    	.contentStyle {
			width: 100%;
			height: 100%;
		}
    </ui:style>
    
    <g:SimplePanel ui:field="main" addStyleNames="{style.contentStyle}">
    	<!-- <g:HTMLPanel>
    		Main for desktop<br/><g:Button text="desktop" ui:field="desktop" />
    	</g:HTMLPanel> -->
    	<cover:ContentFlow ui:field="contentFlow" addStyleNames="{style.contentStyle}" />
    </g:SimplePanel>
</ui:UiBinder>
