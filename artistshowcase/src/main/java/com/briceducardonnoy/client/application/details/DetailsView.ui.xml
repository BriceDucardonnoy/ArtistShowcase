<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <g:ResizeLayoutPanel ui:field="main" height="100%" >
	    <g:DockLayoutPanel ui:field="dockPane" unit="PX">
	    	<!-- Left part -->
	    	<g:west size="300">
	    		<g:LayoutPanel ui:field="westPane">
	    			<g:layer bottom="50%" height="50%">
	    				<g:Image ui:field="mainImage" altText="Selected Picture" addStyleNames="cursorImageFlag" />
	    			</g:layer>
	    			<g:layer top="50%" height="50%">
	    				<g:HTMLPanel ui:field="description" />
	    			</g:layer>
	    		</g:LayoutPanel>
	    	</g:west>
	    	<!-- Center part -->
	    	<g:center>
	    		<g:Label addStyleNames="centerPane">CENTER</g:Label>
	    	</g:center>
	    	<!-- Right part -->
	    	<g:east size="160">
	    		<g:Label>EAST</g:Label>
	    	</g:east>
	    </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>
