<?xml version='1.0' encoding='UTF-8'?>
<module rename-to='ArtistShowcase'>
    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name='com.google.gwt.user.User' />
    <inherits name='com.google.gwt.inject.Inject' />

    <!-- Default css -->
    <inherits name='com.google.gwt.user.theme.standard.Standard' />
    <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
    <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/> -->
    
    <!-- Add gwt-log support, default level displayed in browser console OFF / TRACE / FATAL -->
    <inherits name="com.allen_sauer.gwt.log.gwt-log-OFF" />

	<!-- Add the 'TRACE' and 'DEBUG' compile time log level -->
	<extend-property name="log_level" values="INFO" />

	<!-- inner HTML debugger DISABLED / ENABLED -->
	<set-property name="log_DivLogger" value="DISABLED" />

    <!-- Other module inherits -->
    <inherits name='com.gwtplatform.dispatch.Dispatch' />
    <!-- <inherits name='com.gwtplatform.mvp.MvpWithEntryPoint' /> -->
    <!-- Form-factor -->
    <inherits name="com.gwtplatform.mvp.MvpWithFormFactor" />

    <!-- Form factor specific modules --><!-- Phone and tablet are processed in the same way -->
	<set-configuration-property name="gin.ginjector.module.desktop" value="com.briceducardonnoy.client.gin.DesktopModule" />
	<set-configuration-property name="gin.ginjector.module.mobile" value="com.briceducardonnoy.client.gin.TabletModule" />
	<set-configuration-property name="gin.ginjector.module.tablet" value="com.briceducardonnoy.client.gin.TabletModule" />
	
	<!-- Shared modules -->
    <!-- <set-configuration-property name="gin.ginjector.modules" value="com.briceducardonnoy.client.gin.ClientModule"/> -->
    <extend-configuration-property name="gin.ginjector.modules" value="com.briceducardonnoy.client.gin.SharedModule" />

    <source path='client' />
    <source path='shared' />
    
    <!-- Super Dev Mode -->
    <add-linker name="xsiframe"/>
	<!-- <set-configuration-property name="devModeRedirectEnabled" value="true"/> --><!-- Enabled by default since GWT 2.6 -->
	<!-- enable source maps -->
	<!-- <set-property name="compiler.useSourceMaps" value="true" /> --><!-- Enabled by default since GWT 2.6 -->
</module>
